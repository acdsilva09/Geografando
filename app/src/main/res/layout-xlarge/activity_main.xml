<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backgorund_263">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ex.quiz.Activitys.MainActivity"
        android:orientation="vertical"


        android:gravity="center_horizontal|center_vertical"
        >
        <!-- android:background="@drawable/gradient_bg"-->



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:srcCompat="@drawable/logo2"
            android:layout_marginTop="30dp"/>




        <Button
            android:id="@+id/buttonJogar"
            android:onClick="onClickButtonJogar"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:text="JOGAR"
            android:textSize="40dp"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/white"
            android:background="@drawable/play"
            />


        <Button
            android:id="@+id/buttonConquistas"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blank"
            android:fontFamily="@font/luckiest_guy"
            android:onClick="activityConquistas"

            android:text="CONQUISTAS"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonRecords"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text="ESTATÍSTICAS"
            android:onClick="activityRecords"
            android:layout_marginTop="10dp"
            android:textSize="40dp"
            android:fontFamily="@font/luckiest_guy"

            android:background="@drawable/blank"/>


        <Button
            android:id="@+id/buttonCategorias"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text="OPÇÕES"
            android:onClick="activityCategorias"
            android:textSize="40dp"
            android:fontFamily="@font/luckiest_guy"

            android:layout_marginTop="10dp"
            android:background="@drawable/blank"/>


        <Button
            android:id="@+id/buttonSair"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/exit"
            android:fontFamily="@font/luckiest_guy"
            android:onClick="activitySair"
            android:text="SAIR"
            android:textSize="40dp" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewBannerMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_teste">
        </com.google.android.gms.ads.AdView>


    </LinearLayout>



</LinearLayout>