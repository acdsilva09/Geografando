<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backgorund_263">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ex.quiz.Activitys.MainActivity"
        android:orientation="vertical"


        android:gravity="center_horizontal|center_vertical"
        >
        <!-- android:background="@drawable/gradient_bg"-->



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:srcCompat="@drawable/logo2"
            android:layout_marginTop="30dp"/>




        <Button
            android:id="@+id/buttonJogar"
            android:onClick="onClickButtonJogar"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:text="JOGAR"
            android:textSize="30dp"
            android:fontFamily="@font/luckiest_guy"
            android:textColor="@color/white"
            android:background="@drawable/play"
            />


        <Button
            android:id="@+id/buttonConquistas"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blank"
            android:fontFamily="@font/luckiest_guy"
            android:onClick="activityConquistas"

            android:text="CONQUISTAS"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonRecords"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="ESTATÍSTICAS"
            android:onClick="activityRecords"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:fontFamily="@font/luckiest_guy"

            android:background="@drawable/blank"/>


        <Button
            android:id="@+id/buttonCategorias"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blank"
            android:fontFamily="@font/luckiest_guy"
            android:onClick="activityCategorias"

            android:text="OPÇÕES"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonSair"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/exit"
            android:fontFamily="@font/luckiest_guy"
            android:onClick="activitySair"
            android:text="SAIR"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewBannerMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="00dp"
            app:adSize="BANNER"
            app:adUnitId="@string/admob_banner_teste"></com.google.android.gms.ads.AdView>

    </LinearLayout>

</LinearLayout>