<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.JogoActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:gravity="center_horizontal|center_vertical"
        >


        <LinearLayout
            android:layout_width="710dp"
            android:layout_height="360dp"

            android:gravity="center_horizontal"
            android:background="@drawable/linear_borda"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical"


            >


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"





                >

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginLeft="40dp">

                    <TextView
                        android:id="@+id/textViewQtdPergunta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="TextView"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_marginTop="15dp"

                        android:textColor="#000000"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    >




                    <ImageButton
                        android:id="@+id/btnSom"
                        android:background="@null"
                        android:src="@drawable/som0"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="buttonSom"/>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="299dp"

                android:gravity="center_horizontal|center_vertical"

                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewBandeira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/cidade"/>

                <TextView
                    android:id="@+id/textViewEnunciado"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_horizontal"
                    android:text="Em qual pais se localiza a cidade de Santiago de los Caballeros?"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="7dp"
                    android:textSize="24dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="90dp"
            android:layout_width="400dp"
            android:orientation="horizontal"

            android:gravity="center_vertical|center_horizontal"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_main"
                android:layout_width="100dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/barTimer"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_timer_bg"
                    android:indeterminate="false"
                    android:max="30"
                    android:progress="29"
                    android:progressDrawable="@drawable/circle_timer"
                    android:rotation="-90" />

                <TextView
                    android:id="@+id/textViewTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="30"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="25dp"

                    />

            </RelativeLayout>






            <Button
                android:id="@+id/buttonAjuda"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:onClick="buttonAjuda"
                android:text="text"


                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="4dp"
                android:textSize="10dp"
                android:background="@drawable/buttom_help"

                />

            <ImageView
                android:id="@+id/imageViewVida1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/vida1"
                />
            <ImageView
                android:id="@+id/imageViewVida2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/vida1"
                />
            <ImageView
                android:id="@+id/imageViewVida3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/vida1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            android:gravity="center"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/buttonAlternativa1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="button_Alternativa1"
                android:text="(Alternativa)"
                android:layout_marginRight="20dp"
                android:background="@drawable/borda_arredondada_alternativas"

                />

            <Button
                android:id="@+id/buttonAlternativa2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="button_Alternativa2"
                android:text="(Alternativa)"
                android:background="@drawable/borda_arredondada_alternativas"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/buttonAlternativa3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="button_Alternativa3"
                android:text="(Alternativa)"
                android:layout_marginRight="20dp"
                android:background="@drawable/borda_arredondada_alternativas"
                />

            <Button
                android:id="@+id/buttonAlternativa4"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:onClick="button_Alternativa4"
                android:text="(Alternativa)"
                android:background="@drawable/borda_arredondada_alternativas"
                />
        </LinearLayout>





        <TextView
            android:id="@+id/textViewCodPergunta"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewCategoriaPergunta"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewBannerJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_teste">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
</LinearLayout>